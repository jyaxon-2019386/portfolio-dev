---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/social/Experience.astro";
import SectionContainer from '../components/browser/SectionContainer.astro'
// import SuitCase from '../components/icons/SuitCase.astro'
import SuitCase from "../components/Icons/SuitCase.astro";
import Code from "../components/Icons/Code.astro";
// import Code from "../components/icons/Code.astro";
import Projects from '../components/social/Projects.astro'
import AboutMe from "../components/social/AboutMe.astro";
import ProfileCheck from "../components/Icons/ProfileCheck.astro";
// import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Hero from '../components/browser/Hero.astro'
import Skills from "../components/social/Skills.astro";
import Brand from "../components/Icons/Brand.astro";
// import Brand from '../components/icons/Brand.astro'
---	

<Layout
  title="Porfolio de Juan Pablo - Desarrollador y Programador Web"
  description="Mi portafolio de Programador Jr"
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <SuitCase class="size-8" />
        Experiencia y Estudio
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <Code class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
        <ProfileCheck class="size-8" />
        Sobre m√≠
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="skills">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
      >
      <Brand class="size-8" />
        Skills
      </h2>
      <Skills />
    </SectionContainer>
  </div>
  </main>
</Layout>
